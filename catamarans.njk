{% extends "_includes/default.njk" %}

{% block title %}Catamarans d&#x27;occasion à vendre, achat/vente • Wanaboat.fr{% endblock %}
{% set description = "Catamarans d&#x27;occasion sport, régate et croisière. Nos catamarans sont au meilleur prix à vendre en France et en Europe, annonces prix, achat, vente. Wanaboat.fr spécialiste achat/vente bateaux d&#x27;occasion." %}
{%
  set domain = "https://wanaboat-eleventy.vercel.app"
%}
{%
  set canonical = "https://www.wanaboat.fr/catamarans/"
%}
{%
  set maintitle = "Wanaboat.fr"
%}

{%
  set wording = {
    h1: "Catamarans d'occasion, <span class='text-gray-700'>achat/vente annonces au meilleur prix</span>",
    h2: "⚓ Wanaboat.fr, les petites annonces du catamaran de sport avec politesse et sans arnaques. Votre cata mérite un meilleur coin !",
    intro: "
            Des dizaines de
            <a class='text-blue-600 underline' href='/catamarans/hobie-cat/'>hobie cat</a>,
            <a class='text-blue-600 underline' href='/catamarans/formule-18/'>formule 18</a>,
            <a class='text-blue-600 underline' href='/catamarans/nacra/'>nacra</a>
            . Des catamarans de régate ou de raid, des bateaux foilers ou traditionnel. Le catamaran qui conviendra à votre programme de navigation se trouve sur Wanaboat, c\'est certain !
    "
  }
%}

{%
  set heroimage = "https://www.wanaboat.fr/photos/1545/sl-fun-1.jpg?bg=333333&width=468&height=468&quality=55"
%}

{% block content %}
  {% include "hero.njk" %}
  <div class="mt-5 px-4 md:px-0">
    
    {% include "ads_list_catamarans.njk" %}

    <div class="flex flex-wrap my-10 space-x-2 lg:space-x-8 xl:justify-center">
      <a
        href="/catamarans/liste/"
        class='relative bg-blue-600 hover:bg-blue-700 text-white p-2 xl:p-4 lg:p-8 rounded text-sm lg:text-base font-bold overflow-visible'>
        Toutes les annonces
        <div style="background:#e60000;" class="absolute top-0 right-0 -mt-2 -mr-2 px-2 py-1 bg-red-500 rounded-full text-xs">756</div>
      </a>
      <a
        href="/capitainerie/publier/"
        class='relative bg-blue-600 hover:bg-blue-700 text-white p-2 xl:p-4 lg:p-8 rounded text-sm lg:text-base font-bold overflow-visible'>
        Publiez la vôtre
      </a>
    </div>

    <div class="grid grid-cols-2 lg:grid-cols-6 gap-2">
      {% for model in catamarans_models %} 
        <a class="block" href="/{{ model.slug }}" title={{ model.name }}>
          {{ model.name }}
        </a>
      {% endfor %}
    </div>

    <div class="space-y-5 markdown">
      {% documentToHtmlString catamarans.fields.descLong %}
    </div>
  </div>
  {% endblock %}